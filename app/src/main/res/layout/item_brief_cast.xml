<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_cast_brief"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <taiwan.no1.app.ui.customize.AdjustHeightImageView
        android:id="@+id/iv_cast_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@color/lb_search_bar_text"
        tools:ignore="contentDescription"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#554f4f4f"
        android:gravity="center"
        android:padding="3dp"
        android:textSize="@dimen/textsize_recycleritem_title"
        android:textColor="#dfdfff"
        tools:text="Jieyi Wu"/>
</android.support.v7.widget.CardView>