<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>

        <!-- specify enter and exit transitions -->
        <!-- options are: explode, slide, fade -->
        <item name="android:windowEnterTransition" tools:targetApi="lollipop">@transition/change_image_transform</item>
        <item name="android:windowExitTransition" tools:targetApi="lollipop">@transition/change_image_transform</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">
            @transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">
            @transition/change_image_transform
        </item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorNavigationBar</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_view</item>
    </style>

    <style name="ItemTitle">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CardDescribe">
        <item name="android:background">#55000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#dddddd</item>
    </style>

    <style name="Poster">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="Poster.Text">
        <item name="android:background">#22000000</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Poster.Text.Name">
        <item name="android:textColor">#626262</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Poster.Text.Date">
        <item name="android:textColor">#828282</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DetailTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#828282</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NestScrollInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ListImageSize">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">180dp</item>
    </style>

    <style name="ListImageTitle">
        <item name="android:lineSpacingMultiplier">0.8</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="ListImageTitle.Tv">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">#FCFCFB</item>
    </style>

    <style name="ListImageTitle.Movie">
        <item name="android:textColor">#454044</item>
    </style>

    <style name="MovieOverview">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:lineSpacingMultiplier">.9</item>
        <item name="android:lines">3</item>
    </style>

    <style name="TvListImageSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#F5F2EF</item>
    </style>

    <style name="TvViewPagerArrow">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:background">@color/colorTransport</item>
    </style>

    <style name="TvViewPagerArrow.Left">
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:src">@drawable/ic_arrow_left</item>
    </style>

    <style name="TvViewPagerArrow.Right">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>

    <style name="LayoutSeparateTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
